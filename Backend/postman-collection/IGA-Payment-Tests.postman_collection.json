{
  "info": {
    "name": "IGA Payment API Tests",
    "description": "Complete test collection for IGA payment functionality including refunds",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login - Get JWT Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"mugishaprince395@gmail.com\",\n  \"password\": \"your-password\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Login successful\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Token received\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.success && jsonData.data && jsonData.data.token) {",
                  "        pm.environment.set(\"jwt_token\", jsonData.data.token);",
                  "        console.log(\"JWT Token set successfully\");",
                  "    }",
                  "});"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Payment Management",
      "item": [
        {
          "name": "Get Payment History",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/student/payments/history?page=0&size=5",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "student", "payments", "history"],
              "query": [
                {
                  "key": "page",
                  "value": "0"
                },
                {
                  "key": "size",
                  "value": "5"
                }
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Payment history retrieved\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Extract first payment ID\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.content && jsonData.content.length > 0) {",
                  "        var paymentId = jsonData.content[0].id;",
                  "        pm.environment.set(\"payment_id\", paymentId);",
                  "        console.log(\"Payment ID set to: \" + paymentId);",
                  "    } else {",
                  "        console.log(\"No payments found in history\");",
                  "    }",
                  "});",
                  "",
                  "pm.test(\"Response structure is correct\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('content');",
                  "    pm.expect(jsonData).to.have.property('totalElements');",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Get Specific Payment Details",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/student/payments/{{payment_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "student", "payments", "{{payment_id}}"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Payment details retrieved\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Payment has required fields\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('id');",
                  "    pm.expect(jsonData).to.have.property('amount');",
                  "    pm.expect(jsonData).to.have.property('paymentStatus');",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Request Payment Refund",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/student/payments/refund/{{payment_id}}?reason=Testing refund functionality via Postman",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "student", "payments", "refund", "{{payment_id}}"],
              "query": [
                {
                  "key": "reason",
                  "value": "Testing refund functionality via Postman"
                }
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Refund request processed\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response has required fields\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('success');",
                  "    pm.expect(jsonData).to.have.property('message');",
                  "});",
                  "",
                  "pm.test(\"Log refund response\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    console.log(\"Refund Response:\", JSON.stringify(jsonData, null, 2));",
                  "});"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Payment Verification",
      "item": [
        {
          "name": "Check Payment Status for Course",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/student/payments/check/{{course_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "student", "payments", "check", "{{course_id}}"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Payment check successful\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response is boolean\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(typeof jsonData).to.equal('boolean');",
                  "});"
                ]
              }
            }
          ]
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000"
    }
  ]
}